<div class="pull-right">
  <%= link_to("新增商品", new_admin_product_path, :class => "btn btn-default" ) %>
</div>

<table class="table table-boldered">
    <thead>
        <tr>
            <td>
                商品名称
            </td>

            <td>
                商品描述
            </td>
            <td>
                库存
            </td>
            <td>
                价格（RMB）
            </td>
            <td>
                管理选项
            </td>
            <td>
                创建时间
            </td>
        </tr>
    </thead>

    <% @products.each do |product| %>
    <tr>

        <td> <%= link_to(product.title, admin_product_path(product)) %> </td>
        <td> <%= product.description %> </td>
        <td> <%= product.quantity %> </td>
        <td> <%= product.price %> </td>

        <td>
            <%= link_to("编辑", edit_admin_product_path(product)) %>
            |
            <%= link_to("删除", admin_product_path(product), :method => :delete, :data => { :confirm => "Are you sure?" }) %>

        </td>
        <td>
            <%= product.created_at %>
        </td>
    </tr>
    <% end %>
</table>
